<div class="row gx-3 gx-lg-4">
    {% for ig in interest_groups %}
        <div class="col-md-4 mb-3">
            <div class="card h-100">
                <div class="card-body">
                    <h2 class="card-title">{{ ig.name }}</h2>
                    <p class="card-text">{{ ig.description }}</p>
                </div>
                <div class="card-footer">
                    <a class="btn btn-primary btn-sm" href="{{ url('interest_group_detail', args = [ig.slug]) }}">Go to {{  ig.name }}'s home</a>
                </div>
            </div>
        </div>
    {% endfor %}
</div>
