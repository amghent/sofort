{% from "core/settings.jinja2" import sf_core %}

<div class="{{ sf_core.layout.interest_groups.wrapper }}">
    {% for ig in interest_groups %}
        <div class="{{ sf_core.layout.interest_groups.group }}">
            <div class="{{ sf_core.layout.interest_groups.card }}">
                <div class="{{ sf_core.layout.interest_groups.card_body }}">
                    <h2 class="{{ sf_core.layout.interest_groups.card_title }}">{{ ig.name }}</h2>
                    <p class="{{ sf_core.layout.interest_groups.card_text }}">{{ ig.description }}</p>
                </div>
                <div class="{{ sf_core.layout.interest_groups.card_footer }}">
                    <a class="{{ sf_core.layout.interest_groups.card_button }}"
                       href="{{ url('interest_group_detail', args = [ig.slug]) }}">Go to {{  ig.name }}'s home</a>
                </div>
            </div>
        </div>
    {% endfor %}
</div>
