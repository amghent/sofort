{% extends "base.jinja2" %}

{% block content %}
    <div class="container-fluid px-2 px-lg-3">
        <div class="mt-3">
            <h1>{{ page.title }}</h1>

            {% if page.intro.strip() != "" %}
                <p class="lead">{{ page.intro }}</p>
            {% endif %}

            <p>{{ page.content }}</p>
        </div>
    </div>
{% endblock %}