{% macro create_card_box(_inner_code) %}
    <div class="row d-flex flex-row my-0 gy-3">
        {{ _inner_code }}
    </div>
{% endmacro %}

{% macro create_card(_header, _text) %}
    <div class="card">
        <div class="card-header">{{ _header }}</div>
        <div class="card-body">
            <p class="card-text">{{ _text }}</p>
        </div>
    </div>
{% endmacro %}

{% macro create_action_card(_header, _text, _url, _button_text) %}
    <div class="col-12 col-md-4">
        <div class="card h-100">
            <div class="card-header">{{ _header }}</div>
            <div class="card-body">
                <p class="card-text">{{ _text }}</p>
            </div>
            <div class="card-footer">
                <a class="btn btn-primary btn-sm" href="{{ _url }}">{{ _button_text}}</a>
            </div>
        </div>
    </div>
{% endmacro %}
