<nav class="navbar navbar-expand-lg navbar-dark bg-dark py-1 px-2">
    <div class="container-fluid p-0 m-0">
        {% if sidebar %}
            <button class="btn" id="sidebarToggle"><i class="text-white fa-solid fa-ellipsis-vertical"></i></button>
        {% endif %}

        <a class="navbar-brand ms-2" href="{{ url('index') }}">
            {{ settings.application_name }}
        </a>

        <button class="navbar-toggler" type="button" data-bs-toggle="collapse" data-bs-target="#navbarSupportedContent" aria-controls="navbarSupportedContent" aria-expanded="false" aria-label="Toggle navigation">
            <span class="navbar-toggler-icon"></span>
        </button>

        <div class="collapse navbar-collapse" id="navbarSupportedContent">
            <ul class="navbar-nav ms-auto mb-0">
                {% if meta.current_page == "home" %}
                    <li class="nav-item">
                        <a class="nav-link active" aria-current="page" href="{{ url('index') }}">Home</a>
                    </li>
                {% else %}
                    <li class="nav-item">
                        <a class="nav-link" aria-current="page" href="{{ url('index') }}">Home</a>
                    </li>
                {% endif %}

                {% for menu in navigation_menu %}
                    {% if meta.current_page == "pages_detail" and meta.slug == menu.slug %}
                        <li class="nav-item">
                            <a class="nav-link active" href="{{ url('page_detail', args=[menu.slug]) }}">{{ menu.menu_title }}</a>
                        </li>
                    {% else %}
                        <li class="nav-item">
                            <a class="nav-link" href="{{ url('page_detail', args=[menu.slug]) }}">{{ menu.menu_title }}</a>
                        </li>
                    {% endif %}
                {% endfor %}

                {% if user.username != "" %}
                    <li class="nav-item">
                        <a class="nav-link" aria-current="page" href="{{ url('logout_user') }}">Logout ({{ user.username }})</a>
                    </li>
                {% endif %}
            </ul>
        </div>
    </div>
</nav>