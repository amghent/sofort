{% macro show_alert(_type) %}
    <div class="alert {{ _type }} alert-dismissible fade show float-none" id="sofort-alert" role="alert">
        {{ message.text }}
        <button type="button" class="btn-close" data-bs-dismiss="alert" aria-label="Close"></button>
    </div>
{% endmacro %}

{% if message is defined %}
    <div class="position-absolute w-100 p-2">
        {% if message.status == "SUCCESS" %}
            {{ show_alert("alert-success") }}
        {% elif message.status == "INFO" %}
            {{ show_alert("alert-info") }}
        {% elif message.status == "WARN" %}
            {{ show_alert("alert-warning") }}
        {% elif message.status == "ERROR" %}
            {{ show_alert("alert-danger") }}
        {% endif %}
    </div>
{% endif %}
