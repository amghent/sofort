<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1, shrink-to-fit=no" />
    <meta name="description" content="{{ settings.application_long_name }}" />
    <meta name="author" content="{{ settings.authors }}" />

    <title>{{  settings.application_name }}</title>

    <link rel="icon" type="image/x-icon" href="{{ static('assets/favicon.ico') }}"/>

    <script src="https://kit.fontawesome.com/7869ea07a7.js" crossorigin="anonymous" type="text/javascript"></script>

    {% if load.datatables %}
        <link href="https://cdnjs.cloudflare.com/ajax/libs/twitter-bootstrap/5.1.3/css/bootstrap.min.css"
              rel="stylesheet"/>
        <link href="https://cdn.datatables.net/1.12.1/css/dataTables.bootstrap5.min.css" rel="stylesheet"/>
    {% endif %}

    <link href="{{ static('css/styles.css') }}" rel="stylesheet" type="text/css"/>
    <link href="{{ static('css/sofort.css') }}" rel="stylesheet" type="text/css"/>
    
    {% if load.datatables %}
        <script src="https://code.jquery.com/jquery-3.5.1.js" type="text/javascript"></script>
        <script src="https://cdn.datatables.net/1.12.1/js/jquery.dataTables.min.js" type="text/javascript"></script>
        <script src="https://cdn.datatables.net/1.12.1/js/dataTables.bootstrap5.min.js" type="text/javascript"></script>
    {% endif %}

    {% if load.editor %}
        <link rel="stylesheet" type="text/css" href="{{ static('css/prism.css') }}">
        <script src="{{ static('js/prism.js') }}"></script>

        <script type="text/javascript"
                src='https://cdn.tiny.cloud/1/fcmycanlvvvsfs3c1itork7mdbworiozs1xejsg8ncc60zt8/tinymce/6/tinymce.min.js'
                referrerpolicy="origin"></script>

        <script type="text/javascript">
            tinymce.init(
            {
                selector: 'textarea.enabled',
                inline: false,
                width: '100%',
                height: 300,
                plugins: 'textpattern codesample autoresize wordcount autosave',
                toolbar: 'codesample autosave',
                codesample_languages: [
                    {text: 'Python', value: 'python'},
                    {text: 'Makefile', value: 'makefile'},
                ],
                readonly: false,
            });

            tinymce.init(
            {
                selector: 'textarea.disabled',
                inline: false,
                width: '100%',
                height: 300,
                plugins: 'autoresize',
                toolbar: '',
                menubar: '',
                readonly: true,
            });
        </script>
    {% endif %}
</head>
