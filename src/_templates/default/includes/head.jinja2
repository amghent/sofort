<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1, shrink-to-fit=no" />
    <meta name="description" content="{{ settings.application_long_name }}" />
    <meta name="author" content="{{ settings.authors }}" />

    <title>{{ settings.application_name }}</title>

    <link rel="icon" type="image/x-icon" href="{{ static('assets/favicon.ico') }}"/>

    <link href="{{ static('startbootstrap/styles.css') }}" rel="stylesheet" type="text/css"/>
    <link href="{{ static("datatables/dataTables.bootstrap5.css") }}" rel="stylesheet" type="text/css"/>
    <link href="{{ static('prism/prism.css') }}">
    <link href="{{ static('css/sofort.css') }}" rel="stylesheet" type="text/css"/>

    <script src="{{ static("fontawesome/js/fontawesome.js") }}" type="text/javascript"></script>
    <script src="{{ static("jquery/jquery.min.js") }}" type="text/javascript"></script>
    <script src="{{ static("bootstrap/js/bootstrap.bundle.js") }}" type="text/javascript"></script>
    <script src="{{ static("datatables/jquery.dataTables.min.js") }}" type="text/javascript"></script>
    <script src="{{ static("datatables/dataTables.bootstrap5.min.js") }}" type="text/javascript"></script>
    <script src="{{ static("prism/prism.js") }}" type="text/javascript"></script>
    <script src="{{ static("tinymce/js/tinymce/tinymce.min.js") }}" type="text/javascript"></script>

    <script type="text/javascript">
        tinymce.init(
        {
            selector: 'textarea.tiny_question',
            setup: function (editor) {
                editor.on('change', function () {
                    tinymce.triggerSave();
                });
            },
            inline: false,
            width: '100%',
            min_height: 400,
            branding: false,
            plugins: 'advlist autolink autoresize autosave charmap code codesample emoticons fullscreen help hr ' +
                'image insertdatetime link lists paste searchreplace table textpattern wordcount ',
            toolbar: 'undo redo cut copy paste pastetext | bold italic underline align_grp  | numlist bullist | ' +
                'image link codesample insertdatetime emoticons | restoredraft print fullscreen | help',
            toolbar_mode: 'floating',
            toolbar_sticky: true,
            toolbar_groups: {
                align_grp: {
                    icon: 'format',
                    tooltip: "Align",
                    items: 'alignleft aligncenter alignright alignjustify alignnone'
                }
            },
            menubar: 'edit format insert table tools',
            contextmenu: 'image link codesample table',

            default_link_target: '_blank',
            default_link_protocol: 'https',
            codesample_languages: [
                {text: 'Python', value: 'python'},
                {text: 'Makefile', value: 'makefile'},
                {text: 'HTML/XML', value: 'markup' },
                {text: 'JavaScript', value: 'javascript' },
                {text: 'CSS', value: 'css' },
            ],
            help_tabs: ['shortcuts', 'keyboardnav'],
            image_caption: true,
            image_title: true,
            image_advtab: false,
            insertdatetime_formats: ['%Y-%m-%d', '%Y-%m-%d %H:%M', '%H:%M:%S', '%H:%M'],
            insertdatetime_dateformat: '%Y-%m-%d',
            insertdatetime_timeformat: '%H:%M',
            insertdatetime_element: true,

            statusbar: false,
            readonly: false,
        });

        tinymce.init(
        {
            selector: 'textarea.disabled',
            inline: false,
            width: '100%',
            height: 300,
            branding: false,
            plugins: 'autoresize',
            toolbar: '',
            menubar: '',
            statusbar: false,
            readonly: true,
        });
    </script>
</head>
