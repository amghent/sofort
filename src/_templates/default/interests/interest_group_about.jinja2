{% extends "sidebar.jinja2" %}

{% block sidebar%}
    <div class="border-end bg-white" id="sidebar-wrapper">
        <div class="sidebar-heading border-bottom bg-light">{{ interest_group.name }}</div>
        
        <div class="list-group list-group-flush border-bottom m-0 p-0">
            {% for sb in side_bar%}
                <a class="list-group-item list-group-item-action list-group-item-light px-3 py-2" 
                href="{{ sb.href }}">{{ sb.title }}</a>
            {% endfor%}
        </div>
    </div>
{% endblock %}

{% block content %}
    <div id="page-content-wrapper">
        <div class="container-fluid">
            <div class="mt-3">
            <h1>{{ interest_group.name }}</h1>

            {% if interest_group.description.strip() != "" %}
                <p class="lead">{{ interest_group.description }}</p>
            {% endif %}

            <p>{{ interest_group.about }}</p>
        </div>
        </div>
    </div>
{% endblock %}