{% extends "base.jinja2" %}

{% block sidebar %}
    {% include "includes/interests/sidebar.jinja2" %}
{% endblock %}

{% block content %}
    <div id="content-wrapper" class="container-fluid">
        <div class="row">
            <div class="col-lg-12">
                <h1>New Question</h1>

                <form method="POST" action="{{ url('questions_post', args=[interest_group.slug]) }}">
                    <input type="hidden" name="csrfmiddlewaretoken" value="{{ csrf_token }}">

                    <div class="control-group form-group">
                        <div class="controls">
                            <label for="title">Title:</label>
                            <input type="text" id="title" name="title" class="w-50"
                                   required data-validation-required-message="Please enter the title."/>
                        </div>
                    </div>

                    <div class="control-group form-group">
                        <div class="controls">
                            <label for="text">Question:</label>
                            <textarea id="text" name="text" class="w-100 enabled"></textarea>
                        </div>
                    </div>

                    <button type="submit" class="btn btn-primary">Save</button>
                </form>
            </div>
        </div>
    </div>
{% endblock %}
