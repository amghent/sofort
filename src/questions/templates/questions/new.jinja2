{% extends "base.jinja2" %}

{% block sidebar%}
    <div class="border-end bg-white" id="sidebar-wrapper">
        <div class="sidebar-heading border-bottom bg-light">{{ interest_group.name }}</div>

        <div class="list-group list-group-flush border-bottom m-0 p-0">
            {% for sb in side_bar%}
                <a class="list-group-item list-group-item-action list-group-item-light px-3 py-2"
                href="{{ sb.href }}">{{ sb.title }}</a>
            {% endfor%}
        </div>
    </div>
{% endblock %}

{% block content %}
    <div class="container-fluid px-2 px-lg-3 mt-3">
        <div class="row">
            <div class="col-lg-12">
                <h1>New Question</h1>

                <form method="POST" action="{{ url('questions_post', args=[interest_group.slug]) }}">
                    <input type="hidden" name="csrfmiddlewaretoken" value="{{ csrf_token }}">

                    <div class="control-group form-group">
                        <div class="controls">
                            <label for="title">Title:</label>
                            <input type="text" id="title" name="title" class="w-50"
                                   required data-validation-required-message="Please enter the title."/>
                        </div>
                    </div>

                    <div class="control-group form-group">
                        <div class="controls">
                            <label for="text">Question:</label>
                            <textarea id="text" name="text" class="w-100 enabled"></textarea>
                        </div>
                    </div>

                    <button type="submit" class="btn btn-primary">Save</button>
                </form>
            </div>
        </div>
    </div>
{% endblock %}
