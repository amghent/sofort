{% extends "base.jinja2" %}

{% from "core/common.jinja2" import sf_common %}
{% from "questions/settings.jinja2" import sf_questions %}

{% block sidebar %}
    {% include "includes/interests/sidebar.jinja2" %}
{% endblock %}

{% block content %}
    <div id="content-wrapper" class="container-fluid">
        <div class="row">
            <h1>New Question</h1>

            <form method="POST" action="{{ url('questions_post', args=[interest_group.slug]) }}">
                <input type="hidden" name="csrfmiddlewaretoken" value="{{ csrf_token }}"/>

                <label for="title" class="{{ sf_common.layout.form_label }}">Title:</label>
                <input type="text" id="title" name="title" 
                    class="{{ sf_common.layout.form_control }} {{ sf_questions.layout.new.form.title }}" 
                    required data-validation-required-message="Please enter the title."/>

                <label for="text">Question:</label>
                <textarea id="text" name="text" class="{{ sf_questions.layout.new.form.text }} enabled"
                          required data-validation-required-message="Please enter the content of the question."
                    aria-describedby="textHelp"></textarea>
                <div id="textHelp" class="{{ sf_common.layout.form_help }}">
                    Please provide as much detail as possible. If possible, also a screenshot.</div>

                <button type="submit" 
                    class="{{ sf_common.layout.submit_button }}">Submit your question</button>
            </form>
        </div>
    </div>
{% endblock %}
