{% extends "base.jinja2" %}

{% from "questions/settings.jinja2" import sf_questions %}
{% from "core/common.jinja2" import sf_common%}

{% block sidebar %}
    {% include "includes/interests/sidebar.jinja2" %}
{% endblock %}

{% block content %}
    <div id="content-wrapper" class="container-fluid">
        <div>
            <a href="{{ url('questions_new', args=[interest_group.slug]) }}"
               class="{{ sf_questions.layout.index.buttons.new }}" id="new_question">New Question</a>
        </div>

        <div>
            <h1>Questions</h1>    

            <table id="questions_dt" class="{{ sf_common.layout.datatable }}">
                <thead>
                    <tr>
                        <th>Created</th>
                        <th>Title</th>
                        <th>Author</th>
                    </tr>
                </thead>
                <tbody>
                    {% for q in questions %}
                        <tr>
                            <td>{{ q.created_at | dt_to_user_frmt }}</td>
                            <td>
                                <a href="{{ url("questions_detail", args=[interest_group.slug, q.id]) }}">
                                    {{ q.title }}
                                </a>
                            </td>
                            <td>{{ q.author }}</td>
                        </tr>
                    {% endfor %}
                </tbody>
            </table>
        </div>
    </div>
{% endblock %}

{% block datatable_scripting %}
    <script type="text/javascript">
        $(document).ready(function () {
            $('#questions_dt').DataTable();
        });
    </script>
{% endblock %}
