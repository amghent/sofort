{% extends "base.jinja2" %}

{% block sidebar %}
    {% include "includes/interest_group_sidebar.jinja2" %}
{% endblock %}

{% block content %}
    <div class="container-fluid px-2 px-lg-3">
        <div class="mt-3">
            <a href="{{ url('questions_new', args=[interest_group.slug]) }}" class="btn btn-primary float-end" id="newQuestion">New Question</a>
        </div>
        <div class="mt-5">
            <h1>Questions</h1>    

            <table id="questions_dt" class="table table-striped" style="width:100%">
                <thead>
                    <tr>
                        <th>Title</th>
                        <th>Author</th>
                        <th>Created</th>
                    </tr>
                </thead>
                <tbody>
                    {% for q in questions %}
                        <tr>
                            <td>
                                <a href="{{ url("questions_detail", args=[interest_group.slug, q.id]) }}">
                                    {{ q.title }}
                                </a>
                            </td>
                            <td>{{ q.author }}</td>
                            <td>{{ q.created_at | dt_to_user_frmt }}</td>
                        </tr>
                    {% endfor %}
                </tbody>
                <tfoot>
                    <tr>
                        <th>Title</th>
                        <th>Author</th>
                        <th>Created</th>
                    </tr>
                </tfoot>
            </table>        
        </div>
    </div>
{% endblock %}

{% block datatable_scripting %}
    <script>
        $(document).ready(function () {
            $('#questions_dt').DataTable();
        });
    </script>
{% endblock %}
